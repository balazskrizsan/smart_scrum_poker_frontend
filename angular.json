{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "sj": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss",
          "skipTests": true
        },
        "@schematics/angular:class": {
          "skipTests": true
        },
        "@schematics/angular:directive": {
          "skipTests": true
        },
        "@schematics/angular:guard": {
          "skipTests": true
        },
        "@schematics/angular:interceptor": {
          "skipTests": true
        },
        "@schematics/angular:module": {
          "skipTests": true
        },
        "@schematics/angular:pipe": {
          "skipTests": true
        },
        "@schematics/angular:service": {
          "skipTests": true
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/sj",
            "index": "src/index.html",
            "main": "src/main.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsconfig.app.json",
            "aot": true,
            "assets": [
              "src/_redirects",
              "src/favicon.ico",
              "src/assets",
              "src/assets/img",
              "src/assets/SVG",
              "src/assets/svg-icons",
              "src/assets/group-icons",
              "src/assets/js",
              "src/assets/js/jQuery",
              "src/assets/js/libs",
              "src/assets/js/libs-init",
              "src/assets/js/bootstrap",
              "src/assets/fonts/Roboro",
              "src/assets/fonts/webfonts",
              "src/assets/css"
            ],
            "styles": [
              "src/sass/main.scss"
            ],
            "scripts": []
          },
          "configurations": {
            "prod": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ]
            },
            "latest": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.latest.ts"
                }
              ]
            },
            "uat": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.uat.ts"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "ssl": true,
            "sslKey": "/etc/ssl-dev/server.key",
            "sslCert": "/etc/ssl-dev/server.crt"
          },
          "defaultConfiguration": "latest",
          "configurations": {
            "prod": {
              "browserTarget": "sj:build:prod"
            },
            "latest": {
              "browserTarget": "sj:build:latest"
            }
          }
        }
      }
    }
  },
  "defaultProject": "sj",
  "cli": {
    "analytics": false
  }
}
